@page
@model FAMPro.Pages.AccountManagement.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Account</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Credential.UserID" />
            <div class="form-group">
                <label asp-for="Credential.UserName" class="control-label"></label>
                <input asp-for="Credential.UserName" class="form-control" />
                <span asp-validation-for="Credential.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credential.Password" class="control-label"></label>
                <input asp-for="Credential.Password" class="form-control" />
                <span asp-validation-for="Credential.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="margin:10px 0 10px 0"type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class ="btn btn-primary" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
